<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="me.chunyu.spike.wcl_activity_lifecycle_demo.MainActivity">

    <Button
        android:id="@+id/main_b_translucent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="透明页"/>

    <Button
        android:id="@+id/main_b_second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/main_b_translucent"
        android:text="第二页"/>

    <EditText
        android:id="@+id/main_et_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_b_second"
        android:hint="@null"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="主页"
        android:textSize="20sp"/>

</RelativeLayout>
